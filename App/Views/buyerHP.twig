{% extends "template.twig" %}
{% block content %}

<h3>Your Profile</h3>
<table id='sellerInventory' class='pure-table pure-table-horizontal'>
        <thead>    
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Home Phone</th>
                <th>Identity</th>
            </tr>
        </thead>

        <tbody>
            {% for profile in profiles %}
            <tr>
                <td>{{ profile.firstname }}</td>
                <td>{{ profile.lastname }}</td>
                <td>{{ profile.address }}</td>
                <td>{{ profile.home_phone }}</td>
                <td>{{ profile.identity }}</td>s
            </tr>
            {% endfor %}
        </tbody>
</table>

<h4> Your Order History </h4>
<table id='sellerInventory' class = 'pure-table pure-table-horizontal'  >
        <thead>    
            <tr>
                <th>Product Name</th>
                <th>Quantity </th>
                <th>Time</th>
                <th>Seller</th>
                <th>Vendor</th>
            </tr>
        </thead>

        <tbody>
        	{% for order in orders %}
        	<tr>
                <td>{{ order.productid }}</td>
                <td>{{ order.quantity }}</td>
                <td>{{ order.time }}</td>
                <td>{{ order.seller }}</td>
                <td>{{ order.vendor }}</td>s
            </tr>
            {% endfor %}
        </tbody>
</table>


{% endblock %}